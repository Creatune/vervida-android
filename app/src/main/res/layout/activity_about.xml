<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutActivity">
    <ImageView
            android:src="@drawable/creator"
            android:layout_height="120dp"
            android:clickable="true"
            android:layout_width="120dp"
            android:focusable="true" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/imageView5">

    </ImageView>

    <TextView
            android:text="SREVIN SAJU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:translationZ="6dp"
            android:textSize="40sp" android:fontFamily="@font/ubuntu_bold"
    />
    <Button
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:color="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:id="@+id/solid">

    </Button>
    <TextView
            android:text="Get connected with me on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/solid"/>
    <com.google.android.material.button.MaterialButton
            android:text="MY WEBSITE"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="24dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="EMAIL"

            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            app:strokeWidth="5dp"
            android:textColor="@android:color/holo_green_dark"
            app:strokeColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <com.google.android.material.button.MaterialButton
            android:text="QUORA"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="24dp"
            android:textColor="@android:color/holo_red_dark"
            app:strokeColor="@android:color/holo_red_dark"
            app:strokeWidth="5dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <com.google.android.material.button.MaterialButton
            android:text="GITHUB"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="24dp"
            android:textColor="@android:color/black"
            app:strokeColor="@android:color/black"
            app:strokeWidth="5dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button4"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:text="All content is used under Creative Commons License."
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
              android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/button4"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:text="- Google Firebase, Google Material Design, Android Studio,"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
              android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/button4"
              android:id="@+id/textView11"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:text="(c) 2019"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
              android:id="@+id/textView13"
              app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginTop="36dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:text=" Android TM are registered Trademarks of Alphabet Inc."
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
              android:id="@+id/textView14"
              app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:text="- Ubuntu Bold Font used under Apache License 2.0"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
              android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/button4"
              android:id="@+id/textView12"/>
</androidx.constraintlayout.widget.ConstraintLayout>